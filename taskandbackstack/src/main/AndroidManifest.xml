<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.taskandbackstack">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityA1"/>
        <activity android:name=".ActivityB1" />
        <activity android:name=".ActivityC1" />
        <activity android:name=".ActivityD1" />
        <activity android:name=".ActivityA2" />
        <activity android:name=".ActivityC2" />
        <activity android:name=".ActivityB2" android:launchMode="singleTask" android:taskAffinity=""/>
        <activity android:name=".ActivityD2" />
    </application>

</manifest>